<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:id="@+id/zone_text_left"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_left"
            android:text="message"
            android:background="@drawable/rounded_message_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_left"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_left_bottom"
                android:text="David"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="12dp"
                android:layout_gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zone_text_right"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent">
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/text_right"
            android:text="message"
            android:background="@drawable/rounded_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_right"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/text_right_bottom"
                android:text="David"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:textSize="12dp"
                android:layout_gravity="right"
                android:paddingRight="15dp"
                android:paddingTop="5dp"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>